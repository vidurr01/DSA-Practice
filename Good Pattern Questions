// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;

void pattern1(int n){
    for (int i=0;i<n;i++){
        for (int space=n-1-i;space>0;space--) cout<<" ";
        for (int ch=1;ch<= 2*i+1;ch++) cout<<"*";
        cout<<endl;
    }
    for (int i=0;i<n-1;i++){
        for (int space=0;space<i+1;space++) cout<<" ";
        for (int ch=1;ch<= 2*(n-i-2)+1;ch++) cout<<"*";
        cout<<endl;
    }
}

void pattern2(int n){
    for (int i=0;i<n;i++){
        for (int ch=0;ch<i+1;ch++) cout<<"*";
        for (int space=(2*(n-i))-2;space>0;space--) cout<<" ";
        for (int ch=0;ch<i+1;ch++) cout<<"*";
        cout<<endl;
    }
    for (int i=0;i<n-1;i++){
        for (int ch=i;ch<n-1;ch++) cout<<"*";
        for (int space=0;space<2*(i+1);space++) cout<<" ";
        for (int ch=i;ch<n-1;ch++) cout<<"*";
        cout<<endl;
    }
}

void pattern3(int n){
    for (int i=0;i<n;i++){
        int start = (i+1)%2;
        for (int num=0;num<i+1;num++){
            cout<<start<<' ';
            start = 1-start;
        }
        cout<<endl;
    }
}

void pattern4(int n){
    for (int i=0;i<n;i++){
        for (int space=n-i-1;space>0;space--) cout<<" ";
        for (char ch = 'A'; ch<='A'+i;ch++) cout<<ch;
        for (char ch = 'A'+i-1;ch>='A';ch--) cout<<ch;
        cout<<endl;
    }
}

void pattern5(int n){
    for (int i=n;i>0;i--){
        for (int ch=i;ch>0;ch--) cout<<"*";
        for (int space=0;space<2*(n-i);space++) cout<<" ";
        for (int ch=i;ch>0;ch--) cout<<"*";
        cout<<endl;
    }    
    for (int i=n-1;i>0;i--){
        for (int ch=n-i+1;ch>0;ch--) cout<<"*";
        for (int space=0;space<2*(i-1);space++) cout<<" ";
        for (int ch=n-i+1;ch>0;ch--) cout<<"*";
        cout<<endl;
    } 
}

void pattern6_my_method(int n){
    for (int i=1;i<=n;i++){
        for (int num=n;num>=n-i+1;num--) cout<<num<<" ";
        for (int num=0;num<2*(n-i);num++) cout<<n-i+1<<" ";
        for (int num=n-i+2;num<=n;num++) cout<<num<<" ";
        cout<<endl;
    }
    for (int i=n-1;i>=1;i--){
        for (int num=n;num>=n-i+1;num--) cout<<num<<" ";
        for (int num=0;num<2*(n-i);num++) cout<<n-i+1<<" ";
        for (int num=n-i+2;num<=n;num++) cout<<num<<" ";
        cout<<endl;
    }
    
}

void pattern6_better_method(int n){
    for (int i=1;i<=(2*n)-1;i++){
        for (int j=1;j<=(2*n)-1;j++){
            int left_dist =j-1;
            int right_dist = (2*n)-2-left_dist;
            int up_dist = i-1;
            int down_dist = (2*n)-2-up_dist;
            cout<<4-(min(min(left_dist,right_dist),min(up_dist,down_dist)))<<" ";
        }
        cout<<endl;
    }
}

int main() {
    int n; cout<<"Enter num: "; cin>>n; cout<<endl;
    cout<<"pattern 1:"<<endl<<endl;
    pattern1(n);
    cout<<endl;
    cout<<"pattern 2:"<<endl<<endl;
    pattern2(n);
    cout<<endl;
    cout<<"pattern 3:"<<endl<<endl;
    pattern3(n);
    cout<<endl;
    cout<<"pattern 4:"<<endl<<endl;
    pattern4(n);
    cout<<endl;
    cout<<"pattern 5:"<<endl<<endl;
    pattern5(n);
    cout<<endl;
    cout<<"pattern 6, my method (not recommended):"<<endl<<endl;
    pattern6_my_method(n);
    cout<<endl;
    cout<<"pattern 6, better method:"<<endl<<endl;
    pattern6_better_method(n);
    cout<<endl;

    
    return 0;
}
